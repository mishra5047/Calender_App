<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:theme="@style/FragmentTheme">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back"
        android:theme="@style/IconColorTheme" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/IconColorTheme"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_meeting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextViewTitle"
        android:visibility="gone"
        tools:text="Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_meeting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextViewSubtitle"
            android:visibility="gone"
            tools:text="Date" />

        <TextView
            android:id="@+id/tv_meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:theme="@style/TextViewSubtitle"
            android:visibility="gone"
            tools:text="Time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_alarm"
            android:theme="@style/IconColorTheme"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_reminder_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:theme="@style/TextViewTitle"
            android:visibility="gone"
            tools:text="Title" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_organiser_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/organiser"
        android:theme="@style/TextViewTitle"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_organiser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextViewSubtitle"
        android:visibility="gone"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/location"
        android:theme="@style/TextViewTitle"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextViewSubtitle"
        android:visibility="gone"
        tools:text="Title" />


</LinearLayout>